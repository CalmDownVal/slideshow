{
	"compilerOptions": {
		"baseUrl": "./src",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"paths": {
			"~/*": [
				"*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"types": [],
		"target": "ESNext"
	},
	"include": [
		"./src/**/*"
	]
}
